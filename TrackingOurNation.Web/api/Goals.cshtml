@{

    var db = Database.Open("DataDB");
    var filter = UrlData[0];
    var sql = "";
    if (filter != null)
    {
        sql = "SELECT DISTINCT GoalName, GoalDescription FROM GoalsDetails WHERE GoalNumber = '" + filter + "'";
    }
    else
    {
        sql = "SELECT DISTINCT GoalName, GoalDescription FROM GoalsDetails";
    }
    var data = db.Query(sql);
    var json = Json.Encode(data);
    Response.Write(json);
}

